.intro
	position relative
	display block
	min-height 558px
	background-position 50% 50%

	@media tablet
		min-height 100vh

	&__title
		position absolute
		left 50%
		bottom 36px
		transform translateX(-50%)
		max-width 250px
		font-size 24px
		font-weight bold
		text-align center
		text-transform uppercase
		color white

		@media tablet
			max-width none
			font-size 48px
			white-space nowrap
