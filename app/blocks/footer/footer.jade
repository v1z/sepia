include ../icon/icon
include ../container/container

mixin footer()
	+b('footer').footer&attributes(attributes)
		+container.footer__content
			+e.house
				+icon('house')(width='100%' height='100%')
			+e('span').title Мануфактура
				+e('span').title-bold  Сепия
			+e('span').subtitle Краснодар<br>2018

			+e('nav').social-links
				+e('a').link(href=jv0 target='_blank' rel='noopener noreferrer') Instagram
				+e('a').link(href=jv0 target='_blank' rel='noopener noreferrer') Facebook
				+e('a').link(href=jv0 target='_blank' rel='noopener noreferrer') ВКонтакте

			+e('button').button
				+e('span').button-text Наверх
				+icon('arrow').button-icon(width='18px' height='18px')
