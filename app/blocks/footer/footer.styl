.footer
	padding-bottom 60px

	&__content
		display flex
		flex-direction column
		align-items center

	&__house
		width 126px
		height 70px

		@media tablet
			width 162px
			height 92px

		@media desktop-large
			width 250px
			height 140px

	&__title
		margin-top 22px
		margin-bottom 32px
		font-size 23px
		text-transform uppercase

		@media tablet
			margin-top 32px
			margin-bottom 44px
			font-size 30px

		@media desktop-large
			margin-top 46px
			margin-bottom 64px
			font-size 46px

	&__title-bold
		font-weight bold

	&__subtitle
		margin-bottom 60px
		font-size 19px
		text-align center
		text-transform uppercase

		@media tablet
			margin-bottom 82px
			font-size 25px

		@media desktop-large
			margin-bottom 110px
			font-size 38px

	&__social-links
		display flex
		flex-wrap wrap
		justify-content center
		font-size 23px

		@media tablet
			font-size 30px

		@media desktop-large
			font-size 46px

	&__link
		text-decoration none
		color inherit

		&:hover
			text-decoration underline

		&:not(:last-child)
			margin-right 18px
			margin-bottom 18px

			@media tablet
				margin-right 24px
				margin-bottom 0

			@media desktop-large
				margin-right 36px

	&__button
		position relative
		margin-top 26px
		font-size 23px
		color inherit
		background-color transparent
		border none

		@media tablet
			margin-top 34px
			font-size 30px

		@media desktop-large
			margin-top 42px
			font-size 46px

		&:hover
			text-decoration underline

	&__button-text
		position relative

	&__button-icon
		position absolute
		top 50%
		right -28px
		transform translateY(-50%) rotate(180deg)
		color brown
