.footer
	padding-bottom 60px

	&__content
		display flex
		flex-direction column
		align-items center

	&__house
		width 126px
		height 70px

		@media tablet
			width 162px
			height 92px

		@media desktop-large
			width 250px
			height 140px

	&__title
		margin-top 16px
		margin-bottom 20px
		font-size 23px
		text-transform uppercase

		@media tablet
			margin-top 32px
			margin-bottom 44px
			font-size 30px

		@media desktop-large
			margin-top 46px
			margin-bottom 64px
			font-size 46px

	&__title-bold
		font-weight bold

	&__subtitle
		margin-bottom 46px
		font-size 19px
		text-align center
		text-transform uppercase

		@media tablet
			margin-bottom 82px
			font-size 25px

		@media desktop-large
			margin-bottom 110px
			font-size 38px

	&__social-links
		margin-bottom 18px
		display flex
		flex-wrap wrap
		justify-content center
		font-size 23px

		@media tablet
			margin-bottom 0
			font-size 30px

		@media desktop-large
			font-size 46px

	&__link
		margin-x 9px
		text-decoration none
		color inherit

		@media tablet
			margin-x 12px

		@media desktop-large
			margin-x 18px

		&:hover
			text-decoration underline

	&__button
		position relative
		font-size 23px
		color inherit
		background-color transparent
		border none

		@media tablet
			margin-top 34px
			font-size 30px

		@media desktop-large
			margin-top 42px
			font-size 46px

		&:hover
			text-decoration underline

	&__button-text
		position relative

	&__button-icon
		position absolute
		top 50%
		right -28px
		transform translateY(-50%) rotate(180deg)
		color brown
