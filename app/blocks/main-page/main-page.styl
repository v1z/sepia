.main-page
	display block

	&__text-wrapper
		margin-top 32px
		margin-bottom 50px
		display flex
		flex-direction column

		@media tablet
			margin-top 78px
			margin-bottom 96px
			flex-direction row
			justify-content space-between

	&__text
		width 100%
		font-size 23px

		@media tablet
			width calc((100% - 60px) / 2)
			font-size 32px // TODO

		@media desktop
			width calc((100% - 80px) / 2)
			font-size 56px

		&:first-child
			margin-bottom 30px

			@media tablet
				margin-bottom 0

	&__title
		margin-top 50px
		margin-bottom 32px
		font-size 22px
		font-weight bold
		text-transform uppercase

		@media tablet
			margin-top 96px
			margin-bottom 50px
			font-size 48px
			text-align center

		@media desktop
			font-size 76px

	&__works-wrapper
		margin-top 50px
		margin-bottom 68px
		display flex
		flex-direction column

		@media tablet
			margin-top 70px
			margin-bottom 114px
			flex-direction row
			justify-content space-between
			flex-wrap wrap

		@media desktop-large
			margin-top 95px
			margin-bottom 160px

	&__work
		display flex
		justify-content center
		width 100%

		@media tablet
			width calc((100% - 60px) / 2)

		@media desktop
			width calc((100% - 80px) / 2)

		&:not(:last-child)
			margin-bottom 48px

			@media tablet
				margin-bottom 42px

			@media desktop-large
				margin-bottom 60px

	&__work-link
		display flex
		flex-direction column
		align-items center
		width 100%
		max-width 440px
		color inherit

		@media tablet
			max-width 674px

		@media desktop-large
			max-width 880px

		&:hover
			text-decoration none

	&__work-img
		margin-bottom 15px
		width 100%
		height auto

		@media tablet
			margin-bottom 22px

		@media desktop-large
			margin-bottom 50px

	&__work-title
		display inline-block
		font-size 18px
		text-align center

		@media tablet
			font-size 24px

		@media desktop-large
			font-size 36px
