.header
	position absolute
	z-index 5
	top 0
	left 0
	width 100%
	color white
	background-color transparent

	&_menu-open
		position fixed
		color white
		background-color backplate

	&__content
		display flex
		align-items center
		height 76px

		@media tablet
			height 138px

	&__menu-wrapper
		position fixed
		top 76px
		right 0
		left 0
		bottom 0
		visibility hidden
		overflow auto
		width 100%

		.header_menu-open &
			visibility visible

		@media tablet
			top 138px

	&__link
		display flex
		align-items center
		margin-right auto
		color inherit

	&__logo
		width 218px
		height 66px

		@media tablet
			width 336px
			height 98px

	&__title
		margin-right 34px
		display none
		max-width 280px
		font-size 24px
		text-transform uppercase
		text-decoration underline

		@media tablet
			display block

	&__toggler
		color inherit
		background-color transparent
		border none

		.header_menu-open &
			color brown

	&__burger
		size 34px

		.header_menu-open &
			display none

		@media tablet
			size 44px

	&__close
		display none
		size 34px

		.header_menu-open &
			display block

		@media tablet
			size 44px

	&__burger,
	&__close
		position relative // ie11 fix

